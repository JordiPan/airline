{% extends 'base.html.twig' %}
{% block carousel %}
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="3000" style="position: fixed; width: 100%;">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 " src="{{ asset('images/fly1.png') }}" alt="First slide" style="height: 38em; filter: blur(10px); ">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('images/fly2.jpg') }}" alt="Second slide" style="height: 38em;  filter: blur(10px); ">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('images/fly3.jpg') }}" alt="Third slide" style="height: 38em;  filter: blur(10px); ">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('images/never.jpg') }}" alt="Third slide" style="height: 38em;  filter: blur(10px);">
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}

    <div style="
    background-color:rgba(0, 0, 0, 0.6);
    padding: 1rem;
    margin-top: 5rem;
   position: relative;
   border-radius: 1rem;
   color: white;
">
        <h1 class="text-center">Find your trip to paradise!</h1>
        {{ form_start(form) }}
        <div style="display: inline-block" id="returnTrip">
            <input type="radio" value="returnTrip" name="trip" id="returnTrip" checked onclick="two()">
            <label for="returnTrip">Return trip</label>
        </div>

        <div style="display: inline-block" id="oneWay">
            <input type="radio" value="oneWay" name="trip" id="oneWay" onclick="one()">
            <label for="oneWay">One way</label>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.beginAirport) }}
            </div>
            <div class="col">
                {{ form_row(form.destination) }}
            </div>
        </div>
        {{ form_row(form.date) }}

        <div id="returnDate">
            {{ form_row(form.returnDate, {'id': 'returnValue'}) }}
        </div>

        <button class="btn btn-info" style="width: 100%;margin-top: 1em;" type="submit">Go</button>
        {{ form_end(form) }}
    </div>

    <script>
        function one() {
            let el = document.getElementById('returnDate');
            let date = document.getElementById('returnValue');
            date.required = false;
            date.value = '';

            el.style.display = 'none';
        }
        function two() {
            let el = document.getElementById('returnDate');
            let date = document.getElementById('returnValue');
            date.required = true;
            el.style.display = 'block';
        }
    </script>
{% endblock %}